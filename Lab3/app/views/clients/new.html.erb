
<head>
        <meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1" />
        <title>Login screen</title>
        <%= stylesheet_link_tag 'sessions' %>
</head>

<body>
    <div class="hoodie">
        <p><a href="/">Login</a></p>
        <!--<a href="http://127.0.0.1:8000/en/polls/"><img src="{% static "eng.jpg" %}" alt="US"></a>-->
        <!--<a href="http://127.0.0.1:8000/ru/polls/"><img src="{% static "ukr.jpg" %}" alt="UA"></a>-->
    </div>
    <div class="wrapper">
        <div class="container">

            <h1>Welcome</h1>
            <%= form_tag '/signup', :class => 'form' do %>
              <p>
                <%= text_field_tag :login_name, nil, placeholder: 'Username', maxlength: 30  %>
              </p>
              <p>
                <%= email_field_tag :login_email, nil, placeholder: 'Email'  %>
              </p>
              <p>
                <%= password_field_tag :login_pass, nil, placeholder: 'Password', maxlength: 64 %>
              </p>
              <%= submit_tag 'Sign Up', class: 'login_button' %>
            <% end %>
        </div>

        <div class="bg-bubbles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </div>
    </div>
