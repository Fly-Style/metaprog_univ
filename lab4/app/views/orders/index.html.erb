<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><h4>Name</h4></th>
      <th><h4>Email</h4></th>
      <th><h4>Address</h4></th>
      <th><h4>Comment</h4></th>
      <th><h4>Status</h4></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.email %></td>
        <td><%= order.address %></td>
        <td><%= order.comment %></td>
        <td>
          <%= "New" if order.status.nil? %>
          <%= "Delivery service" if order.status == 1 %>
          <%= "Processed" if order.status == 2 %>
        </td>
        <td><%= link_to 'Show', order, class: "btn btn-xs btn-default" %></td>
        <td><%= link_to 'Edit', edit_order_path(order), class: "btn btn-xs btn-warning" %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path, class: "btn btn-md btn-primary" %>
