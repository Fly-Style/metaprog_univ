<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>

<div class="table">
<table class="table table-striped">
  <thead>
    <tr>
      <th><h4>Id</h4></th>
      <th><h4>Name</h4></th>
      <th><h4>Parent</h4></th>
      <th><h4>Image</h4></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= category.parent.name unless category.parent.nil? %></td>
        <td><%= category.img %></td>
        <td><%= link_to 'Show', category, class: "btn btn-xs btn-default" %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-xs btn-warning" %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Category', new_category_path, class: "btn btn-md btn-primary" %>
